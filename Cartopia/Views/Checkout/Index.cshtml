@model Cartopia.Models.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
        }

        .admin-header {
            background-color: #102E50;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .admin-header img {
                height: 60px;
            }

            .admin-header a {
                color: #F5C45E;
                font-weight: 600;
                text-decoration: none;
            }

                .admin-header a:hover {
                    color: #E78B48;
                }

        .btn-place {
            background-color: #F5C45E;
            color: #102E50;
        }

            .btn-place:hover {
                background-color: #e6b64d;
            }
    </style>
}

<div class="admin-header">
    <img src="~/logo/logo.png" alt="Logo" height="auto" width="150px" />
    <a href="javascript:history.back()">← Go Back</a>
</div>

<div class="container mt-5">
    <h2 class="text-primary fw-semibold mb-4">Checkout</h2>

    <div class="card p-4 shadow-sm border-0">
        <form asp-action="PlaceOrder" asp-controller="Checkout" method="post">
            <div class="mb-3">
                <label asp-for="ShippingAddress" class="form-label fw-semibold">Shipping Address</label>
                <textarea asp-for="ShippingAddress" class="form-control" rows="3" placeholder="Enter delivery address"></textarea>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <p><strong>Total Amount: $@Model.TotalAmount</strong></p>
            </div>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-place">Place Order</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

