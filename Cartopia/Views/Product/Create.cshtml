@model Cartopia.Models.Product



	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Create Product</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
	</head>


<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" enctype="multipart/form-data" style="max-width: 600px; margin: auto; background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">
    <h3 style="font-family: 'Poppins', sans-serif; color: #102E50; margin-bottom: 20px;">Create Product</h3>

    <label asp-for="Name" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Product Name</label>
    <input asp-for="Name" class="form-control" style="padding: 10px; margin-bottom: 15px; border: 1px solid #E78B48; border-radius: 5px;">

    <label asp-for="Description" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Description</label>
    <textarea asp-for="Description" class="form-control" style="padding: 10px; margin-bottom: 15px; border: 1px solid #F5C45E; border-radius: 5px;"></textarea>

    <label asp-for="Category" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Category</label>
    <input asp-for="Category" class="form-control" style="padding: 10px; margin-bottom: 15px; border: 1px solid #BE3D2A; border-radius: 5px;">

    <label asp-for="Price" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Price</label>
    <input asp-for="Price" type="number" step="0.01" class="form-control" style="padding: 10px; margin-bottom: 15px; border: 1px solid #BE3D2A; border-radius: 5px;">

    <label asp-for="Stock" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Stock Quantity</label>
    <input asp-for="Stock" type="number" class="form-control" style="padding: 10px; margin-bottom: 15px; border: 1px solid #E78B48; border-radius: 5px;">

    <label for="ImageFile" style="display: block; font-family: 'Poppins', sans-serif; color: #102E50; font-weight: 600;">Upload Image</label>
    <input id="ImageFile" name="ImageFile" type="file" class="form-control" style="padding: 10px; margin-bottom: 20px; border: 1px solid #F5C45E; border-radius: 5px;" />


    <button type="submit" class="btn btn-primary" style="background-color: #102E50; border: none; color: white; padding: 10px 15px; font-family: 'Poppins', sans-serif; font-weight: 600; border-radius: 5px; cursor: pointer;">
        <i class="fa fa-plus" style="margin-right: 5px;"></i> Create Product
    </button>


</form>
